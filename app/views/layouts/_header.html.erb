<header class="navbar navbar-default">
	<div class="container">
		<%= link_to "EventLite", root_path, class: "navbar-brand", id: "logo" %>
		<% if logged_in? %>
			<p class="navbar-text">
				<em>Signed in as <%= current_user.name %></em>
			</p>
		<% end %>
		<nav>
			<ul class="nav navbar-nav navbar-right nav-pills">
				<li><%= link_to "Home", root_path %></li>
				<% if logged_in? %>
					<li><%= link_to "Create Event", new_event_path %></li>
					<li><%= link_to "All Events", events_path %></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
              				Account <b class="caret"></b>
            			</a>
    					<ul class="dropdown-menu">
    						<li><%= link_to "My Events", current_user %></li>
							<li><%= link_to "Log Out", logout_path, method: "delete" %></li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "Log In", login_path %></li>
					<li><%= link_to "Sign Up", new_user_path %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>